  <table>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th></th>
    </tr>
    <% @article.comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter %></td>
      <td><%= comment.body %></td>
      <td><%= link_to 'Delete comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>